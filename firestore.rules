rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow anonymous users to read/write their own artifacts
    match /artifacts/{appId}/users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow pending_changes collection for submissions
    match /pending_changes/{changeId} {
      // Allow create for authenticated users
      allow create: if request.auth != null;
      // Allow read for authorized users (admins)
      allow read: if request.auth != null &&
        request.auth.token.email in [
          'codisecperu@gmail.com',
          'gerson.angulo.zavaleta@gmail.com'
        ];
      // Allow delete for authorized users
      allow delete: if request.auth != null &&
        request.auth.token.email in [
          'codisecperu@gmail.com',
          'gerson.angulo.zavaleta@gmail.com'
        ];
    }
  }
}
